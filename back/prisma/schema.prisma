// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  password String
  idResident Resident[]
  idvisitor Visitor []
 
}

model Visitor {
  id      Int    @id @default(autoincrement())
  name    String
  cpf     Int 
  address  String 
  license String?
  idResident   Int
  idUser   Int
  visits    Visit[]    
  User     User  @relation(fields: [idUser], references: [id])
}

model Resident {
  id      Int    @id @default(autoincrement())
  name    String
  cpf     Int
  address String
  license String
  idUser   Int
  visitors  Visit[] 
  User   User  @relation(fields: [idUser], references: [id])
}

model Visit {
  id          Int       @id @default(autoincrement())
  visitorId   Int
  residentId  Int
  visitor     Visitor   @relation(fields: [visitorId], references: [id])
  resident    Resident  @relation(fields: [residentId], references: [id])
}





