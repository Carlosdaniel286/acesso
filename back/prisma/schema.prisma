generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  cpf        String     @unique
  name       String
  password   String
  idResident Resident[]
  idvisitor  Visitor[]
}

model Visitor {
  id         Int     @id @default(autoincrement())
  name       String
  cpf        Int
  address    String
  license    String?
  idResident Int
  idUser     Int
  visits     Visit[]
  User       User    @relation(fields: [idUser], references: [id])
}

model Resident {
  id       Int     @id @default(autoincrement())
  name     String
  cpf      Int
  address  String
  license  String?
  idUser   Int
  User     User    @relation(fields: [idUser], references: [id])
  visitors Visit[]
}

model Visit {
  id         Int      @id @default(autoincrement())
  visitorId  Int
  residentId Int
  resident   Resident @relation(fields: [residentId], references: [id])
  visitor    Visitor  @relation(fields: [visitorId], references: [id])
}
